generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Book {
  id        Int      @id @default(autoincrement())
  title     String
  author    String
  price     Float
  imageUrl  String
  genre     String
  createdAt DateTime @default(now())
}
