generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Author {
  id          Int    @id @default(autoincrement())
  name        String
  nationality String
  books       Book[]
}

model Book {
  id        Int      @id @default(autoincrement())
  title     String
  authorId  Int
  price     Float
  imageUrl  String
  genre     Genre
  createdAt DateTime @default(now())
  author    Author   @relation(fields: [authorId], references: [id], onDelete: SetNull)
}

enum Genre {
  Ciencia_Ficcion
  Fantasia
  Desarrollo_Personal
  Novela_Historica
}

enum Role {
  USER
  ADMIN
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique   
  password  String
  name      String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
}
